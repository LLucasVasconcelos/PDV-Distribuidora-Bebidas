@page
@model IndexModel
@{
    ViewData["Title"] = "Histórico de Vendas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark"><i class="bi bi-clock-history me-2"></i> Histórico de Vendas</h2>
        <a asp-page="/Vendas/Registrar" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nova Venda
        </a>
    </div>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-4 border-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Mensagem"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @foreach (var grupo in Model.HistoricoAgrupado)
    {
        <div class="card mb-4 shadow-sm border-0 rounded-3 overflow-hidden">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <div class="bg-secondary rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-receipt fs-5"></i>
                    </div>
                    <div>
                        <small class="d-block text-secondary text-uppercase fw-bold" style="font-size: 0.7rem;">Data da Transação</small>
                        <span class="fw-semibold">@grupo.Data.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-end">
                    <span class="badge bg-primary fs-5 px-3 py-2 me-3">
                        @grupo.TotalVenda.ToString("C")
                    </span>

                    <form method="post" asp-page-handler="CancelarCompra" class="m-0">
                        @* Formato ISO "O" garante que o servidor encontre a data exata no SQLite *@
                        <input type="hidden" name="dataCompra" value="@grupo.Data.ToString("O")" />

                        <button type="submit" class="btn btn-danger btn-sm px-3 shadow-sm d-flex align-items-center"
                                onclick="return confirm('ATENÇÃO: Deseja estornar todos os itens desta compra e devolver ao estoque?')">
                            <i class="bi bi-trash3 me-1"></i> Cancelar
                        </button>
                    </form>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3">Produto</th>
                            <th class="text-center">Qtd</th>
                            <th class="text-end">Preço Unit.</th>
                            <th class="text-end pe-4">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in grupo.Itens)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">@item.Produto?.Nome</span>
                                    @if (item.Produto == null)
                                    {
                                        <span class="badge bg-warning text-dark">Excluído do Estoque</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">@item.QuantidadeVendida</span>
                                </td>
                                <td class="text-end text-muted">
                                    @* Correção: Verificação contra divisão por zero *@
                                    @(item.QuantidadeVendida > 0 ? (item.ValorTotal / item.QuantidadeVendida).ToString("C") : "R$ 0,00")
                                </td>
                                <td class="text-end pe-4 fw-bold">
                                    @item.ValorTotal.ToString("C")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (!Model.HistoricoAgrupado.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-light-emphasis" style="font-size: 5rem;"></i>
            <h4 class="text-muted mt-3">Nenhuma venda encontrada.</h4>
            <p class="text-secondary">As vendas realizadas no PDV aparecerão aqui.</p>
        </div>
    }
</div>