@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-dark">Painel de Controle</h1>
            <p class="text-muted">Bem-vindo ao sistema de gestão da sua distribuidora.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="fw-bold">@Model.FaturamentoTotal.ToString("C")</h3>
                            <p class="mb-0">Faturamento Total</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-currency-dollar fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="fw-bold">@Model.VendasRealizadas</h3>
                            <p class="mb-0">Vendas Feitas</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-cart-check fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="fw-bold">@Model.TotalProdutos</h3>
                            <p class="mb-0">Produtos Cadastrados</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-box-seam fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="fw-bold">@Model.ItensEmFalta</h3>
                            <p class="mb-0">Estoque Crítico</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-exclamation-octagon fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4">
                <h4 class="mb-4 fw-bold">Ações Rápidas</h4>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-page="/Vendas/Registrar" class="btn btn-outline-primary btn-lg px-4">
                        <i class="bi bi-plus-circle me-2"></i> Nova Venda
                    </a>
                    <a asp-page="/Produtos/Create" class="btn btn-outline-success btn-lg px-4">
                        <i class="bi bi-box-arrow-in-down me-2"></i> Entrada de Estoque
                    </a>
                    <a asp-page="/Produtos/Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-search me-2"></i> Consultar Produto
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-warning-subtle p-4">
                <h5 class="fw-bold text-warning-emphasis">Aviso do Sistema</h5>
                <p class="small text-dark mb-0">
                    Sempre verifique o relatório de <strong>Alertas de Estoque</strong> antes de realizar novos pedidos aos fornecedores.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}