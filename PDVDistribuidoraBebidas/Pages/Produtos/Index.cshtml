@page
@model PDVDistribuidoraBebidas.Pages.Produtos.IndexModel

@{
    ViewData["Title"] = "Estoque";
}

<div class="container pb-5">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="display-6"><i class="bi bi-box-seam"></i> Inventário de Bebidas</h1>
        <a asp-page="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Novo Produto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">@Html.DisplayNameFor(model => model.Produto[0].Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Produto[0].Preco)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.Produto[0].Quantidade)</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Produto)
                    {
                        // Lógica para destacar estoque baixo
                        var classeEstoque = item.Quantidade < 10 ? "text-danger fw-bold" : "text-dark";

                        <tr>
                            <td class="ps-4 align-middle">
                                <span class="fw-bold">@item.Nome</span>
                            </td>
                            <td class="align-middle">
                                @item.Preco.ToString("C")
                            </td>
                            <td class="text-center align-middle">
                                <span class="badge rounded-pill @(item.Quantidade < 10 ? "bg-danger" : "bg-success")">
                                    @item.Quantidade unid.
                                </span>
                            </td>
                            <td class="text-end pe-4 align-middle">
                                <div class="btn-group" role="group">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        Editar
                                    </a>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                        Info
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        Remover
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}