@page
@model PDVDistribuidoraBebidas.Pages.Produtos.EstoqueBaixoModel
@{
    ViewData["Title"] = "Relatório Crítico";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="bg-danger text-white p-3 rounded-3 me-3 shadow">
            <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        </div>
        <div>
            <h2 class="mb-0 text-danger fw-bold">Relatório de Reposição Crítica</h2>
            <p class="text-muted mb-0">Produtos com saldo abaixo de 10 unidades que exigem atenção imediata.</p>
        </div>
    </div>

    @if (!Model.ProdutosCriticos.Any())
    {
        <div class="alert alert-success d-flex align-items-center shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2 fs-4"></i>
            <div>
                Tudo em ordem! Não há produtos com estoque crítico no momento.
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Produto</th>
                            <th class="py-3">Saldo Atual</th>
                            <th class="py-3" style="width: 30%;">Nível de Alerta</th>
                            <th class="py-3">Status</th>
                            <th class="py-3 text-end pe-4">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProdutosCriticos)
                        {
                            // Cálculo da largura da barra de progresso (baseado em 10 como limite)
                            var porcentagem = (item.Quantidade * 100) / 10;
                            var corBarra = item.Quantidade <= 3 ? "bg-danger" : "bg-warning";

                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold d-block">@item.Nome</span>
                                    <small class="text-muted">Cód: #@item.Id</small>
                                </td>
                                <td>
                                    <span class="badge bg-danger fs-6">@item.Quantidade unid.</span>
                                </td>
                                <td>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated @corBarra"
                                             role="progressbar"
                                             style="width: @porcentagem%"></div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-danger fw-bold small">
                                        <i class="bi bi- megaphone"></i> REPOR AGORA
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark shadow-sm">
                                        <i class="bi bi-cart-plus"></i> Abastecer
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 p-3 bg-light rounded border">
            <small class="text-muted">
                <strong>Dica:</strong> Este relatório é gerado automaticamente. Recomenda-se realizar pedidos de compra assim que o status "REPOR AGORA" for exibido.
            </small>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}