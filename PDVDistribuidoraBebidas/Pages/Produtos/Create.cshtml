@page
@model PDVDistribuidoraBebidas.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Adicionar Produto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="mb-3">
                <a asp-page="Index" class="text-decoration-none text-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar para a lista
                </a>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i> Adicionar Nova Bebida</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2" style="font-size: 0.9rem;"></div>

                        <div class="mb-3">
                            <label asp-for="Produto.Nome" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-tag"></i></span>
                                <input asp-for="Produto.Nome" class="form-control" placeholder="Ex: Cerveja Pilsen 600ml" />
                            </div>
                            <span asp-validation-for="Produto.Nome" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Produto.Preco" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">R$</span>
                                    <input asp-for="Produto.Preco" class="form-control" placeholder="0,00" />
                                </div>
                                <span asp-validation-for="Produto.Preco" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Produto.Quantidade" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-hash"></i></span>
                                    <input asp-for="Produto.Quantidade" class="form-control" placeholder="Ex: 50" />
                                </div>
                                <span asp-validation-for="Produto.Quantidade" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-check-lg"></i> Cadastrar no Estoque
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted mt-4 small">
                Distribuidora de Bebidas - Sistema de Gestão Web 2
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}