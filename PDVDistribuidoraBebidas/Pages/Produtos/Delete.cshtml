@page
@model PDVDistribuidoraBebidas.Pages.Produtos.DeleteModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="text-center mb-4">
                <i class="bi bi-exclamation-octagon text-danger" style="font-size: 4rem;"></i>
                <h2 class="fw-bold text-danger">Confirmar Exclusão?</h2>
                <p class="text-muted">Esta ação não pode ser desfeita e o produto será removido permanentemente do estoque.</p>
            </div>

            <div class="card shadow border-0 overflow-hidden">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0 text-center text-uppercase fw-bold">Resumo do Item</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted small">NOME:</dt>
                        <dd class="col-sm-8 fw-bold fs-5">@Html.DisplayFor(model => model.Produto.Nome)</dd>

                        <dt class="col-sm-4 text-muted small">PREÇO:</dt>
                        <dd class="col-sm-8 text-success fw-semibold">@Model.Produto.Preco.ToString("C")</dd>

                        <dt class="col-sm-4 text-muted small">SALDO:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Produto.Quantidade) unidades</dd>

                        <dt class="col-sm-4 text-muted small">CÓDIGO:</dt>
                        <dd class="col-sm-8 text-monospace">#@Model.Produto.Id</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Produto.Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm fw-bold">
                                <i class="bi bi-trash3-fill"></i> Sim, Excluir Produto
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar e Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Produto.Quantidade > 0)
            {
                <div class="alert alert-info mt-4 small" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    <strong>Nota:</strong> Este produto ainda possui <strong>@Model.Produto.Quantidade</strong> unidades em estoque. Certifique-se de que o estoque físico também será descartado.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}